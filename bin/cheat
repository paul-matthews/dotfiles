  ${C}gs${R}              ${G}status -sb${R}                      ${C}gc${R}              ${G}commit${R}
  ${C}gd${R}              ${G}diff (color)${R}                    ${C}gca${R}             ${G}commit -a${R}
  ${C}gl${R}              ${G}log (short)${R}                     ${C}gac${R} ${Y}"msg"${R}       ${G}add all + commit${R}
