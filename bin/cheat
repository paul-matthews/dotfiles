  ${C}git last${R}        ${G}log -1 HEAD${R}                     ${C}git unstage${R}     ${G}reset HEAD --${R}
  ${C}git lg${R}          ${G}log graph (all branches)${R}        ${C}lazygit${R}         ${G}full git TUI${R}
  ${C}git count${R}       ${G}shortlog -sn${R}                    ${R}

  ${H}Navigate & Sync${R}
  ${S}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${R}
  ${C}gpl${R}             ${G}pull --prune${R}                    ${C}gco${R} ${Y}<branch>${R}    ${G}checkout${R}
  ${C}gp${R}              ${G}push origin HEAD${R}                ${C}gb${R}              ${G}branch${R}
  ${C}git up${R}          ${G}pull --rebase --autostash${R}       ${C}git cb${R} ${Y}<name>${R}   ${G}checkout -b${R}
  ${C}git pf${R}          ${G}pull --ff-only${R}                  ${C}gcb${R}             ${G}copy branch name${R}


${M}ğŸŒ³ Git Worktrees${R}
${S}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${R}

  ${D}Worktrees let you work on multiple branches simultaneously â€” each in its own directory.${R}
  ${D}All worktrees share the same .git, so commits are visible across them.${R}

  ${S}~/src/pico/cosmic-clock/  ${W}(main repo)${R}           ${C}gwm${R} ${G}â† jump back here${R}
  ${S}    â”‚${R}
  ${S}    â”œâ”€â”€ ${R}${C}gwa feat-a${R} ${S}â”€â”€â†’${R} ${W}~/src/.worktrees/cosmic-clock--feat-a/${R}    ${D}Tab 1: you or Claude${R}
  ${S}    â”‚${R}
  ${S}    â””â”€â”€ ${R}${C}gwa feat-b${R} ${S}â”€â”€â†’${R} ${W}~/src/.worktrees/cosmic-clock--feat-b/${R}    ${D}Tab 2: another Claude${R}

  ${H}Commands${R}
  ${S}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${R}
  ${C}gwa${R} ${Y}<branch>${R}        ${G}create new branch + worktree, cd into it${R}
  ${C}gwc${R} ${Y}<branch>${R}        ${G}checkout existing branch into worktree${R}
  ${C}gwj${R}                 ${G}fzf jump to any worktree${R}
  ${C}gwm${R}                 ${G}jump back to main repo${R}
  ${C}gwl${R}                 ${G}list all worktrees${R}
  ${C}gwr${R} ${Y}<path>${R}          ${G}remove a worktree${R}
  ${C}gwp${R}                 ${G}prune stale worktrees${R}


${M}ğŸ¤– Claude CLI${R}
${S}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${R}

  ${D}Each Claude session auto-gets a unique tab color from a rotating palette.${R}
