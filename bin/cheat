#!/bin/bash
# Dotfiles cheatsheet â€” colored for dark terminals

# Colors
R=$'\033[0m'        # reset
B=$'\033[1m'        # bold
D=$'\033[2m'        # dim
C=$'\033[1;36m'     # bold cyan â€” commands
Y=$'\033[33m'       # yellow â€” arguments/params
G=$'\033[32m'       # green â€” descriptions
M=$'\033[1;35m'     # bold magenta â€” headers
H=$'\033[1;37m'     # bold white â€” sub-headers
S=$'\033[2;37m'     # dim white â€” separators/lines
W=$'\033[37m'       # white â€” flow text

cat <<EOF

${M}ğŸ” Navigation & Search${R}
${S}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${R}
${C}z${R} ${Y}<partial>${R}                ${G}smart cd â€” learns from usage (zoxide)${R}
${C}c${R} ${Y}<project>${R}                ${G}cd ~/src/<project>${R}
${C}Ctrl-T${R}                     ${G}fzf: fuzzy file picker (inserts path at cursor)${R}
${C}Ctrl-R${R}                     ${G}fzf: fuzzy history search${R}
${C}Alt-C${R}                      ${G}fzf: fuzzy cd into subdirectory${R}
${C}rg${R} ${Y}<pattern>${R}               ${G}ripgrep: fast recursive grep (respects .gitignore)${R}
${C}fd${R} ${Y}<pattern>${R}               ${G}fd: fast find by filename${R}


${M}ğŸŒ¿ Git${R}
${S}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${R}

