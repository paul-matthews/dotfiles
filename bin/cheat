  ${C}tabcolor claude${R}         ${G}orange shades + CLAUDE badge${R}
  ${C}tabcolor cosmic${R}         ${G}purple/blue shades + PICO badge${R}
  ${C}tabcolor dotfiles${R}       ${G}green shades + SYS badge${R}
  ${C}tabcolor android${R}        ${G}teal shades + ANDROID badge${R}
  ${C}tabcolor danger${R}         ${G}red + PROD badge${R}
  ${C}tabcolor reset${R}          ${G}back to default${R}


${M}ğŸ”§ Dotfiles & Tools${R}
${S}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${R}

  ${C}dot${R}                     ${G}update dotfiles + brew + defaults${R}
  ${C}reload!${R}                 ${G}source ~/.zshrc${R}
  ${C}sync-upstream${R}           ${G}rebase your changes onto holman/master${R}
  ${C}pubkey${R}                  ${G}copy Ed25519 SSH public key to clipboard${R}
  ${C}cheat${R}                   ${G}show this cheatsheet${R}

  ${H}Reading Files${R}
  ${S}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${R}
  ${C}bat${R} ${Y}<file>${R}              ${G}cat with syntax highlighting + line numbers${R}
  ${C}bat -l json${R} ${Y}<file>${R}      ${G}pretty-print JSON${R}
  ${C}delta${R}                   ${G}better git diffs (automatic via gitconfig)${R}


${M}ğŸš Shell${R}
${S}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${R}

  ${C}d${R}                       ${G}dirs -v (directory stack)${R}
  ${C}pu${R} / ${C}po${R}                 ${G}pushd / popd${R}
